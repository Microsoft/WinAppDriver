<Window x:Class="WinAppDriverUIRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinAppDriverUIRecorder"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        Title="WAD UIRecorder" Height="500" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="UiRecording">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid  Name="gridXPath">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height= "{Binding TabCodeHeight}" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <RichTextBox IsReadOnly="True"  Name="rtbXPath" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MouseEnter="rtbXPath_MouseEnter" >
                                <RichTextBox.ToolTip>
                                    <ToolTip>
                                        <TextBlock Name="rtbXPath_ToolTip" Text= "xpath for recorded UI" />
                                    </ToolTip>
                                </RichTextBox.ToolTip>
                                <RichTextBox.ContextMenu>
                                    <ContextMenu Name="MenuXPathTextBox">
                                        <MenuItem Header="Copy Full XPath" Click="MenuCopyFullPath"/>
                                        <MenuItem Header="Copy XPath Excluding Session Path" Click="MenuCopyPathWithoutSessionPath"/>
                                        <MenuItem Header="Clear Session Path" Click="MenuClearSessionPath"/>
                                    </ContextMenu>
                                </RichTextBox.ContextMenu>
                            </RichTextBox>
                        </Grid>
                        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="Azure"/>
                        <Grid Grid.Row="2">
                            <TabControl Name="tabControl">
                                <TabItem>
                                    <TabItem.Header>
                                        <Label Content="Recorded UI" HorizontalAlignment="Stretch"/>
                                    </TabItem.Header>

                                    <TreeView Name="treeUiPath" HorizontalContentAlignment="Center" 
                                       VerticalContentAlignment="Center" 
                                       SelectedItemChanged="treeUiPath_SelectedItemChanged" Grid.Row="0" SourceUpdated="treeUiPath_SourceUpdated">

                                        <TreeView.ItemContainerStyle>
                                            <Style TargetType="{x:Type TreeViewItem}">
                                                <Setter Property="TreeViewItem.IsExpanded" Value="True"/>
                                            </Style>
                                        </TreeView.ItemContainerStyle>
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate DataType="{x:Type local:UiTreeNode}" ItemsSource="{Binding Items}">
                                                <TextBlock Text="{Binding Title}" ToolTipService.ToolTip="{Binding Title,Mode=TwoWay}" />
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>

                                        <TreeView.Resources>
                                            <ContextMenu x:Key ="UiNode"  StaysOpen="true">
                                                <MenuItem Header="Highlight"  Click="Highlight_Click"/>
                                                <MenuItem Header="Edit Attributes"  Click="EditAttribute_Click"/>
                                                <MenuItem Header="Set as Session Path"  Click="SetSessionRoot_Click"/>
                                            </ContextMenu>
                                            <ContextMenu x:Key="LeafNode"  StaysOpen="true">
                                                <MenuItem Header="Highlight"  Click="Highlight_Click"/>
                                                <MenuItem Header="Edit Attributes"  Click="EditAttribute_Click"/>
                                                <MenuItem Header="Remove"/>
                                            </ContextMenu>
                                        </TreeView.Resources>
                                    </TreeView>
                                </TabItem>
                                <TabItem Name="tabItemCode">
                                    <TabItem.Header>
                                        <Label Content="C# Code" HorizontalAlignment="Stretch"/>
                                    </TabItem.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6*" />
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="2*" />
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="0" Name="textBoxCode" TextChanged="textBoxCode_TextChanged" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MouseEnter="textBoxCode_MouseEnter">
                                            <TextBox.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Name="textBoxCode_ToolTip" Text= "C# code for recorded UI" />
                                                </ToolTip>
                                            </TextBox.ToolTip>
                                        </TextBox>
                                        <Grid MinHeight="30" Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6*" />
                                                <ColumnDefinition Width="4*" />
                                            </Grid.ColumnDefinitions>
                                            <ComboBox Grid.Column="0" Name="comboBoxGetBy" SelectionChanged="comboBoxGetBy_SelectionChanged">
                                                <ComboBoxItem Content="Name" Name="comboBoxItemName"/>
                                                <ComboBoxItem Content="AccessibilityId" Name="comboBoxItemAutomationId"/>
                                                <ComboBoxItem Content="XPath" IsSelected="True"/>
                                            </ComboBox>
                                            <Button Grid.Column="1" Name="buttonAddToCodeOuptug" Content="Add" Click="buttonAddToCodeOuptug_Click"/>
                                        </Grid>
                                        <Grid MinHeight="30" Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6*" />
                                                <ColumnDefinition Width="4*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" Name="textBoxParentVariable" PreviewTextInput="textBoxParentVariable_PreviewTextInput" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                                            <Button Grid.Column="1" Name="buttonChangParentVariable" Content="Change ParentVariable" Click="buttonChangParentVariable_Click"/>
                                        </Grid>
                                    </Grid>
                                </TabItem>
                                <TabItem Name="tabItemCustomizeCode">
                                    <TabItem.Header>
                                        <Label Content="Customize C# Code" HorizontalAlignment="Stretch" />
                                    </TabItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="5*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="7*" />
                                            <RowDefinition Height="3*" />
                                        </Grid.RowDefinitions>
                                        <TextBox Name="textBlockCustomCode" AllowDrop="True" Drop="TextBlockCustomCode_Drop" PreviewDragEnter="textBlockCustomCode_PreviewDragEnter" TextChanged="textBlockCustomCode_TextChanged" x:FieldModifier="public" TextWrapping="Wrap" Grid.ColumnSpan="2">
                                            [VariableType] [VariableName] => [ParentVariable].FindElementBy[GetBy]("[SearchParameter]");
                                        </TextBox>
                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.ColumnSpan="2">
                                            <StackPanel Orientation="Horizontal">
                                                <Label Content="VariableName" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                           MouseDown="Label_MouseDown" QueryContinueDrag="Label_QueryContinueDrag"/>
                                                <Label Content="VariableType" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                           MouseDown="Label_MouseDown" QueryContinueDrag="Label_QueryContinueDrag"/>
                                                <Label Content="ParentVariable" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                           MouseDown="Label_MouseDown" QueryContinueDrag="Label_QueryContinueDrag"/>
                                                <Label Content="GetBy" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                           MouseDown="Label_MouseDown" QueryContinueDrag="Label_QueryContinueDrag"/>
                                                <Label Content="SearchParameter" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                           MouseDown="Label_MouseDown" QueryContinueDrag="Label_QueryContinueDrag"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <ComboBox Name="comboBoxRecordedUi" SelectionChanged="comboBoxRecordedUi_SelectionChanged" Margin="0,0,0,0"
                                  Background="Ivory" MouseEnter="comboBoxRecordedUi_MouseEnter"
                                  PreviewMouseLeftButtonDown="ComboBoxRecordedUi_PreviewMouseLeftButtonDown">
                                    <ComboBox.ToolTip>
                                        <ToolTip>
                                            <TextBlock Name="comboBoxRecordedUi_ToolTip" Text= "xpath for recorded UI" />
                                        </ToolTip>
                                    </ComboBox.ToolTip>
                                </ComboBox>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Button Name="btnWinAppDriverCode" Click="btnWinAppDriverCode_Click">
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock Name="toolTipText" Text= "Generate and copy C# code to Clipboard" />
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <Button.Content>
                                        <Image Source="Resource/copy.png"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Button Name="btnDelete"  Content="-" FontSize="22" Click="btnDelete_Click">
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <TextBlock Name="toolTipDelete" Text= "Delete selected UI task" />
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <ToggleButton Content="Record" Name="btnRecord" Click="btnRecord_Click" IsThreeState="False" Margin="1,1,1,1"
                        ToolTip="Record UI interaction (Please wait for flashing rect before each mouse click)">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border CornerRadius="3" Background="{TemplateBinding Background}">
                                        <ContentPresenter Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </Grid>

                    <Grid Grid.Column="1">
                        <ToggleButton Content="Clear" Name="btnClear" Click="btnClear_Click" IsThreeState="False" Margin="1,1,1,1"
                        ToolTip="Clear all recorded UI tasks">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border CornerRadius="3" Background="{TemplateBinding Background}">
                                        <ContentPresenter Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </Grid>
                    <Grid Grid.Column="2"  Background="White" Name="gridTextRecording">
                        <TextBlock Name="textBoxRecording" HorizontalAlignment="Center" VerticalAlignment="Center" Text="" FontWeight="Bold" Margin="0,0,0,0"/>
                    </Grid>
                </Grid>
            </Grid>
        </GroupBox>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="2*" MinHeight="90"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Code Output">
                <TextBox Name="textBoxCodeOutput">

                </TextBox>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="File Options">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" MinHeight="20" />
                        <RowDefinition Height="1*" MinHeight="20"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Name="textBoxFilePath" MinHeight="20" Margin="5">

                        </TextBox>
                        <Button Name="buttonSelectFile" Grid.Column="1" MinHeight="20" Margin="5" Content="Select C# File..." Click="buttonSelectFile_Click"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Name="buttonClearCodeOutput"  Content="Clear Code Output" MinHeight="20" Margin="5" Click="buttonClearCodeOutput_Click"/>
                        <Button Grid.Column="2" Name="buttonAddToCode" Content="Add To Code" MinHeight="20" Margin="5" Click="buttonAddToCode_Click"/>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
